<!-- store.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Store Review App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Store Review App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/addStore">Add new store</a>
              </li> 
              <li class="nav-item">
                <a class="nav-link" href="/reviews">View all Reviews</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Store Details</h2></div>
        <br>
        <% if (store) { %> <!-- Check if store data exists -->
            <div>
                <p><b>Store Name:</b><br> <%= store.storeName %></p>
                <p><b>Store Image:</b><br> <img src = "/images/<%= store.image %>" width="20%"></p>
                <p><b>Store Location:</b><br> <%= store.location %></p>
                <p><b>Store Description:</b><br> <%= store.description %></p> 
                <a href="<%= reviewUrl %>" class="btn btn-primary">Make a Review</a>
                <a href="/store/<%= store.storeID %>/reviews" class="btn btn-primary">View Reviews</a>
            </div>
        <% } else { %>
            <p>No store found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
